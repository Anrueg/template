[workspace]
members = ["{{ backend }}/*"]
resolver = "3"

[workspace.package]
version = "0.1.0"
edition = "2024"

[workspace.lints.rust]
# warnings = { level = "forbid" }

[workspace.lints.rustdoc]
# warnings = { level = "forbid" }

[workspace.lints.clippy]
# warnings = { level = "forbid" }

# Dependency management:
#
# in workspace Cargo.toml
# [workspace.dependencies]
# dotenvy = "0.15.0"
#
# in package Cargo.toml
# [dependencies]
# dotenvy = { workspace = true }
[workspace.dependencies]
dotenvy = { git = "https://github.com/allan2/dotenvy", features = [ "macros" ] }
envconfig = "0.11"
strum = { version = "0.27", features = [ "derive" ] }
derive-getters = "0.5"
bon = "3"
tracing = "0.1"
tracing-subscriber = "0.3"
tracing-opentelemetry = "0.29"
thiserror = "1"
anyhow = { version = "1", features = [ "backtrace" ] }
tokio = { version = "1", features = [ "full" ] }
serde = { version = "1", features = [ "derive" ] }
serde_json = "1"
axum = "0.8"
listenfd = "1"
derivative = "2"

# Auto reload
# https://docs.rs/listenfd/latest/listenfd/
# https://stackoverflow.com/questions/29461693/how-can-i-get-cargo-to-recompile-changed-files-automatically
# https://lucumr.pocoo.org/2025/1/19/what-is-systemfd/

